---
const navItems = [
  {
    item: 'Accueil',
    path: '/',
  },
  {
    item: 'Portfolio',
    path: '/portfolio',
  },
];
---

<nav class="desktop__nav">
  <div class="nav__bottom">
    <div class="nav__icon">
      <svg
        stroke="currentColor"
        fill="currentColor"
        stroke-width="0"
        viewBox="0 0 16 16"
        height="1em"
        width="1em"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          fill-rule="evenodd"
          d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"
        ></path>
      </svg>
    </div>

    <div class="nav__wrap">
      {
        navItems.map((navItem) => (
          <a class="nav__item" href={navItem.path}>
            {navItem.item}
          </a>
        ))
      }
      <span class="nav__item nav__item-contact"> Contact</span>
    </div>
  </div>
</nav>

<style>
  .desktop__nav {
    display: none;
    position: fixed;
    left: 50%;
    transform: translate(-50%, 0%);
    bottom: 1.875rem;
    z-index: 5;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    color: rgb(0, 0, 0);
    font-family: 'Raleway', sans-serif;
    font-size: 1rem;
  }
  .desktop__nav a,
  .desktop__nav span {
    all: unset;
    margin: 0px 0.937rem;
  }

  .desktop__nav .nav__bottom {
    background-color: white;
    display: inline-flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    padding: 10px 2.5rem 10px 10px;
    border-radius: 4.375rem;
    margin-top: 1rem;
    white-space: nowrap;
    overflow: hidden;
    box-shadow: rgba(0, 0, 0, 0.25) 0px 4px 30px -10px;
  }

  .desktop__nav .nav__icon {
    height: 2.5rem;
    width: 2.5rem;
    border-radius: 2.5rem;
    border: 1px solid rgb(217, 217, 217);
    margin-right: 1.25rem;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
  }

  .desktop__nav .nav__icon svg {
    transform-origin: center center;
    fill: rgb(0, 0, 0);
  }
  .desktop__nav:hover .nav__icon svg {
    fill: var(--color-text-black);
  }

  .desktop__nav .nav__wrap {
    display: inline-flex;
    width: auto;
  }

  .desktop__nav .nav__wrap .nav__item:first-child {
    margin-left: 0px;
  }
  .desktop__nav .nav__item {
    transition: font-weight 0.2s ease-in-out 0s;
  }

  .desktop__nav .nav__item:hover {
    color: var(--color-text-alt);
  }

  .desktop__nav .nav__wrap .nav__item:last-child {
    margin-right: 0px;
  }

  @media (min-width: 1024px) {
    .desktop__nav {
      display: block;
    }
  }
</style>
