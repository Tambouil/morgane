<style>
  .section {
    line-height: 1;
    position: static;
    top: 0;
    z-index: 4;
    width: 100%;
    background: var(--color-bg);
  }

  .section--intro {
    position: relative;
    margin-bottom: 250vh;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 10rem 0 2rem;
    cursor: default;
  }

  .section__title {
    font-family: kudryashev-d-excontrast-sans, sans-serif;
    font-weight: 300;
    font-size: clamp(2rem, 17vw, 12.5rem);
    margin: 5vh 0 6vh;
    line-height: 0.9;
    text-transform: none;
    -moz-font-feature-settings: 'swsh';
    -webkit-font-feature-settings: 'swsh';
    font-feature-settings: 'swsh';
  }

  .section__title--medium {
    font-size: clamp(1.5rem, 12vw, 9rem);
  }

  .section__text {
    margin: 0;
    max-width: 400px;
    text-transform: uppercase;
  }

  .section__text--alt {
    margin-top: 2rem;
    color: var(--color-text-black);
    text-transform: uppercase;
  }

  .section__arrow {
    transform: translateY(3px) rotate(135deg);
    fill: currentColor;
  }

  .button {
    pointer-events: auto;
    cursor: pointer;
    background: #e7e7e7;
    border: none;
    padding: 1rem 2rem;
    margin: 0;
    font-family: inherit;
    font-size: inherit;
    position: relative;
    display: inline-block;
  }

  .button::before,
  .button::after {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
  }

  .buttons_cta {
    margin: 0.5rem 2rem;
    padding: 2rem;
  }

  .button--cta {
    text-transform: uppercase;
    letter-spacing: 0.05rem;
    font-weight: 700;
    font-size: 0.85rem;
    border-radius: 0.5rem;
    overflow: hidden;
    color: #fff;
    background: #e7e7e7;
    margin: 0.5rem;
  }

  .button--cta span {
    position: relative;
    mix-blend-mode: difference;
    color: #fff;
  }

  .button--cta::before {
    content: '';
    background: #000;
    width: 120%;
    left: -10%;
    transform: skew(30deg);
    transition: transform 0.4s cubic-bezier(0.3, 1, 0.8, 1);
  }

  .button--cta:hover::before {
    transform: translate3d(100%, 0, 0);
  }
</style>
